# Application Configuration
# Copy this file to .env and fill in your specific values

# Airtable Configuration
# Base ID found in your Airtable API documentation
VITE_AIRTABLE_BASE_ID=app...
# Personal Access Token (PAT) with data.records:read/write scopes
VITE_AIRTABLE_API_KEY=pat...

# Supabase Configuration
# Project URL (https://<project-id>.supabase.co)
VITE_SUPABASE_URL=https://...
# Anonymous Public Key
VITE_SUPABASE_ANON_KEY=ey...
# Storage Bucket Name
VITE_SUPABASE_BUCKET=incident-images

# Google Gemini AI (Optional)
# API Key for image and text analysis
VITE_GEMINI_API_KEY=

# System Access
# Access key for archive features (if applicable)
VITE_ARCHIVE_ACCESS_KEY=

# Server Port (Optional, defaults to 3000)
PORT=3000
