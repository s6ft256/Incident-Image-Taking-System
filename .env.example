
# ------------------------------------------------------------
# Local development environment variables
#
# 1) Copy to .env
#    cp .env.example .env
#
# 2) Fill values (DO NOT commit .env)
#
# Notes
# - Vite only exposes variables prefixed with VITE_ to the browser.
# - For Airtable, BASE_ID should look like: appXXXXXXXXXXXXXX (no /tbl...)
# ------------------------------------------------------------

# Airtable
VITE_AIRTABLE_BASE_ID=appXXXXXXXXXXXXXX
VITE_AIRTABLE_API_KEY=
# Optional: overrides the default 'Observation Reports'
VITE_AIRTABLE_TABLE_NAME=

# When true, client-side code will call server endpoints under `/api/airtable/{Table}`
# instead of calling the Airtable API directly. Configure server env vars `AIRTABLE_BASE_ID` and `AIRTABLE_API_KEY`.
VITE_USE_SERVER_PROXY=true

# Supabase
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
# Optional: overrides the default 'incident-images'
VITE_SUPABASE_BUCKET=

# Server-only (used by server.js OAuth flow)
# AIRTABLE_CLIENT_ID=
# AIRTABLE_CLIENT_SECRET=
# REDIRECT_URI=
